<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet and Network -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Storage -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    
    <!-- Camera -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Location for SOS and Map -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Vibration for emergency alerts -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Biometric -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartCampusNavigationSafetyAssistant"
        android:usesCleartextTraffic="true">

        <!-- Splash Screen (Launcher) -->
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.OnboardingActivity" android:theme="@style/Theme.Material3.Light.NoActionBar" />


        <!-- Authentication -->
        <activity android:name=".ui.LoginActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.RegisterActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.ForgotPasswordActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.ResetPasswordActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        
        <!-- Main App -->
        <activity android:name=".ui.MainActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        
        <!-- Settings & Profile -->
        <activity android:name=".ui.SettingsActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.ChangePasswordActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.EditProfileActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        
        <!-- Emergency & Features -->
        <activity android:name=".ui.SOSActivity" 
            android:theme="@style/Theme.Material3.DayNight.NoActionBar"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.NotificationsActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.RoomBookingActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        
        <!-- Academic & LMS -->
        <activity android:name=".ui.academic.AcademicDashboardActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.academic.AttendanceActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.academic.SeatingPlanActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <!-- Financial Management -->
        <activity android:name=".ui.financial.FinancialDashboardActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.financial.FeeChalanActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.financial.WalletActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <!-- Campus Logistics -->
        <activity android:name=".ui.logistics.CafeteriaActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.logistics.LibraryActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.logistics.ShuttleTrackerActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <!-- Advanced Safety -->
        <activity android:name=".ui.safety.CompanionWalkActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.safety.LostFoundActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.safety.AiSurveillanceActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <!-- Engagement & Tech -->
        <activity android:name=".ui.engagement.ArNavigationActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.engagement.ChatbotActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.engagement.GamificationActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        
        <!-- Admin & Faculty -->
        <activity android:name=".ui.admin.FacultyDashboardActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.admin.AdminDashboardActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity android:name=".ui.admin.ClassroomManagementActivity" android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <!-- QR Scanner Activity -->
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />

    </application>

</manifest>
