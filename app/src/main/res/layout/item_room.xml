<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/roomCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Room Icon -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_surface_variant"
            android:padding="12dp"
            android:src="@drawable/ic_meeting_room"
            android:contentDescription="Room"
            app:tint="?attr/colorPrimary" />

        <!-- Room Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/roomName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Room 101"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/availabilityChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:visibility="gone"
                    app:chipMinHeight="24dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/roomCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Capacity: 20"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/roomLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Building A, Floor 1"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp" />

            <!-- Equipment Icons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/projectorIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_projector"
                    android:contentDescription="Projector"
                    android:visibility="gone"
                    app:tint="?attr/colorPrimary" />

                <ImageView
                    android:id="@+id/whiteboardIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_whiteboard"
                    android:contentDescription="Whiteboard"
                    android:visibility="gone"
                    app:tint="?attr/colorPrimary" />

                <ImageView
                    android:id="@+id/acIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_ac"
                    android:contentDescription="Air Conditioning"
                    android:visibility="gone"
                    app:tint="?attr/colorPrimary" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
