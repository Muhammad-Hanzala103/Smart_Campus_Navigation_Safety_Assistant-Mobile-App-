<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.safety.CompanionWalkActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Companion Walk"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Never walk alone. Share your live location with a friend or security."
        android:textColor="#757575"
        android:layout_marginBottom="24dp"/>

    <!-- Map Placeholder -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="24dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ECEFF1">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"
                android:alpha="0.3"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map View"
                android:layout_centerInParent="true"
                android:textColor="#546E7A"/>

            <!-- User Marker -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_my_location"
                app:tint="#2196F3"
                android:layout_centerInParent="true"/>
                
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Controls -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#F1F8E9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="Live Location Sharing"
                        android:textStyle="bold"
                        android:textColor="#33691E"/>
                    <TextView
                        android:id="@+id/tvStatus"
                        android:text="Status: Inactive"
                        android:textSize="12sp"
                        android:textColor="#757575"/>
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C5E1A5"
                android:layout_marginVertical="12dp"/>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInvite"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Invite Companion"
                android:textColor="#33691E"
                app:strokeColor="#33691E"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Panic Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPanic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Emergency Panic Button"
        android:padding="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#B71C1C"
        app:icon="@drawable/ic_warning"
        app:iconGravity="textStart"/>

</LinearLayout>
