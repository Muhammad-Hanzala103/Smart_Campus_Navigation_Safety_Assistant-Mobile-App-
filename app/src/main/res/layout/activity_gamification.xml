<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FAFAFA"
    tools:context=".ui.engagement.GamificationActivity">

    <!-- Points Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#673AB7">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">
            
            <TextView
                android:id="@+id/tvPointsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campus Points"
                android:textColor="#B3E5FC"/>
            
            <TextView
                android:id="@+id/tvPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPointsLabel"
                android:text="1,250"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>
                
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_star"
                app:tint="#FFD700"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
                
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Challenges"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- Challenge 1 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_library"
                app:tint="#1976D2"/>
                
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">
                <TextView
                    android:text="Library Regular"
                    android:textStyle="bold"/>
                <TextView
                    android:text="Visit library 3 times this week"
                    android:textSize="12sp"
                    android:textColor="#757575"/>
            </LinearLayout>
            
            <TextView
                android:text="+50 pts"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Event Ticket -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Show Event Ticket QR"
        android:padding="16dp"
        app:icon="@drawable/ic_qr_code"/>
        
    <ImageView
        android:id="@+id/qrImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="#000000"
        android:visibility="gone"/>

</LinearLayout>
